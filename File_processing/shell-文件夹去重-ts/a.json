{
    "compilerOptions": {
      "target": "es2016",
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "./lib"
    },
    "include": ["./"],
    "exclude": ["node_modules", "lib/**/*"]
  }